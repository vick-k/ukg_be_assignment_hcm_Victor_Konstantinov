@using HCM.Web.Areas.Admin.ViewModels;
@model EmployeeFormModel

@{
	ViewData["Title"] = "Create New Employee";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="mt-4" method="post">
	<div class="row">
		<div class="form-group mb-3 col-md-6">
			<label asp-for="FirstName" class="control-label fw-bold">First Name</label>
			<input asp-for="FirstName" class="form-control" aria-required="true" placeholder="Enter the first name of the employee" />
			<span asp-validation-for="FirstName" class="text-danger fst-italic"></span>
		</div>
		<div class="form-group mb-3 col-md-6">
			<label asp-for="LastName" class="control-label fw-bold">Last Name</label>
			<input asp-for="LastName" class="form-control" aria-required="true" placeholder="Enter the last name of the employee" />
			<span asp-validation-for="LastName" class="text-danger fst-italic"></span>
		</div>
	</div>

	<div class="row">
		<div class="form-group mb-3 col-md-6">
			<label asp-for="Username" class="control-label fw-bold">Username</label>
			<input asp-for="Username" class="form-control" aria-required="true" placeholder="Enter the username of the employee" />
			<span asp-validation-for="Username" class="text-danger fst-italic"></span>
		</div>
		<div class="form-group mb-3 col-md-6">
			<label asp-for="Email" class="control-label fw-bold">Email</label>
			<input asp-for="Email" class="form-control" aria-required="true" placeholder="Enter the email of the employee" />
			<span asp-validation-for="Email" class="text-danger fst-italic"></span>
		</div>
	</div>

	<div class="row">
		<div class="form-group mb-3 col-md-4">
			<label asp-for="JobTitleId" class="control-label fw-bold">Job Title</label>
			<select asp-for="JobTitleId" class="form-select" aria-required="true" asp-items="@(new SelectList(Model.JobTitles, "Id", "Name"))">
				<option value="">Choose a job title...</option>
			</select>
			<span asp-validation-for="JobTitleId" class="text-danger fst-italic"></span>
		</div>
		<div class="form-group mb-3 col-md-4">
			<label asp-for="DepartmentId" class="control-label fw-bold">Department</label>
			<select asp-for="DepartmentId" class="form-select" aria-required="true" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
				<option value="">Choose a department...</option>
			</select>
			<span asp-validation-for="DepartmentId" class="text-danger fst-italic"></span>
		</div>
		<div class="col-md-4">
			<label asp-for="Salary" class="control-label fw-bold">Salary</label>
			<div class="input-group">
				<span class="input-group-text">BGN</span>
				<input asp-for="Salary" class="form-control" aria-required="true" />
			</div>
			<span asp-validation-for="Salary" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group mt-4">
		<button type="submit" class="btn btn-success">Create Employee</button>
	</div>
	<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
