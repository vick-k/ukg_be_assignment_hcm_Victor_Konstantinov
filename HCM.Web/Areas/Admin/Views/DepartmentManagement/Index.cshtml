@using HCM.Web.Areas.Admin.ViewModels;
@model IEnumerable<DepartmentListModel>

@{
	ViewData["Title"] = "Department Management";
}

<div class="container mt-5">
	<h1 class="text-center mb-4">@ViewData["Title"]</h1>

	<a class="btn btn-success btn mb-2" asp-controller="DepartmentManagement" asp-action="Create">Add Department</a>

	<table class="table table-bordered table-hover">
		<caption>Total departments: @Model.Count()</caption>
		<thead>
			<tr>
				<th>Department Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var department in Model)
			{
				<tr>
					<td>@department.Name</td>
					<td>
						<a asp-area="Admin" asp-action="Edit" asp-controller="DepartmentManagement" asp-route-id="@department.Id" class="btn btn-info btn-sm">Edit</a>
						<form method="post" asp-action="Delete" asp-controller="DepartmentManagement" asp-area="Admin" class="d-inline ms-2">
							<input type="hidden" name="id" value="@department.Id" />
							<button type="submit" class="btn btn-danger btn-sm mb-1 mt-1" onclick="return confirm('Are you sure you want to delete this department?');">Delete</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
