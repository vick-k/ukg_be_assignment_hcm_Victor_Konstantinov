@using HCM.Web.Areas.Admin.ViewModels;
@model DepartmentFormModel

@{
	ViewData["Title"] = "Add New Department";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="mt-4" method="post">
	<div class="row">
		<div class="form-group mb-3 col-md-4">
			<label asp-for="Name" class="control-label fw-bold">Name</label>
			<input asp-for="Name" class="form-control" aria-required="true" placeholder="Enter the name of the department" />
			<span asp-validation-for="Name" class="text-danger fst-italic"></span>
		</div>
	</div>

	<div class="form-group mt-4">
		<button type="submit" class="btn btn-success">Add Department</button>
	</div>
	<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
