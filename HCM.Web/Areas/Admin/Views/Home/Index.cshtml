@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-success">@ViewData["Title"]</h1>
        <p class="lead mb-5 text-muted">Manage your application using the sections below</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">Add, edit or remove users and assign roles.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Departments</h5>
                    <p class="card-text text-muted">Add, edit or remove departments.</p>
                    <a asp-area="Admin" asp-controller="DepartmentManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Departments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>